{
  "name": "protect-lite",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint '**/libraries/**/*.{js,mjs}'",
    "test": "jest --coverage --env=jsdom --verbose=true",
    "demo": "parcel Demos/Tomito/index.html --open",
    "build": "parcel build libraries/bestow-iframe/bestow-iframe.mjs --dist-dir build --no-cache"
  },
  "devDependencies": {
    "@babel/core": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@parcel/babel-preset-env": "^2.2.1",
    "@parcel/transformer-inline-string": "^2.2.1",
    "babel-jest": "^27.4.6",
    "eslint": "^8.8.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-parcel2": "^1.0.1",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^27.4.7",
    "jest-transform-stub": "^2.0.0",
    "parcel": "^2.2.1"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.(js|mjs)$": "babel-jest",
      ".+\\.(css|scss|png|jpg|svg)$": "jest-transform-stub"
    },
    "moduleNameMapper": {
      "^.+.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub"
    }
  }
}
